<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.fragment.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_setting" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/settingMainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/spoqabold"
            android:textColor="#686565"
            android:textSize="35dp"
            android:text="설정" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/studentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqabold"
                android:textColor="#686565"
                android:textSize="35dp"
                android:text="송주현" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/studentUniv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqabold"
                android:textColor="#686565"
                android:textSize="25dp"
                android:text="부산대학교 - 의생명융합공학부" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/myInformationBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqabold"
            android:textColor="#686565"
            android:textSize="30dp"
            android:text="내 정보 및 계정 관리" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#e4e4e4"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/qnaBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqabold"
            android:textColor="#686565"
            android:textSize="30dp"
            android:text="문의 및 버그 제보" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#e4e4e4"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appInfoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqabold"
            android:textColor="#686565"
            android:textSize="30dp"
            android:text="앱 정보" />

    </LinearLayout>

</LinearLayout>