<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pongponglabs.eyear">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.auth.RegisterPageActivity">

        </activity>
        <activity android:name=".ui.auth.FindPasswordActivity"
            android:parentActivityName=".ui.auth.LoginPageActivity"
            android:theme="@style/Theme.MaterialComponents.NoActionBar"/>


        <activity android:name=".ui.auth.LoginPageActivity" />


        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/Theme.MaterialComponents.NoActionBar"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".ui.MainActivity">

        </activity>
    </application>

</manifest>